<!--users一覧 -->
<table class="table table-hover">
		<thead>
			<tr>
				<th>images</th>
				<th>name</th>
				<th></th>
				<th></th>
				<th></th>
			</tr>
		</thead>
		<tbody>
			<% users.each do |user| %>
			<tr>
				<td><%= attachment_image_tag(user, :profile_image, :fill, 50, 50, fallback: "noimage.png", size: "50x50") %></td>
				<td>
					<strong><%= link_to user.name, user_path(user) %></strong></td>
				<td>
					<strong><%= user.followings.count %></strong> フォロー中</td>
				<td>
					<strong><%= user.followers.count %></strong> フォロワー</td>
				<td>
					<% unless user == current_user %>
					    <% if current_user.following?(user) %>
					      <p><%= link_to "フォロー中", relationships_path(user.id), method: :delete, class: "btn btn-primary" %></p>
					    <% else %>
					      <p><%= link_to "フォロー", relationships_path(user.id), method: :post, class: "btn btn-default" %></p>
					    <% end %>
					<% end %>
				</td>
			</tr>
			<% end %>
		</tbody>
	</table>
</div>
<!--users一覧 -->