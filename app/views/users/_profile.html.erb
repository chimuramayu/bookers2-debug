<table class="table">
		<tr><%= attachment_image_tag(user, :profile_image, :fill, 100, 100, fallback: "noimage.png", size: "100x100") %></tr>
		<tr>
			<th>name</th>
			<th><%= user.name %></th>
		</tr>
		<tr>
			<th>introduction</th>
			<th><%= user.introduction %></th>
		</tr>
		<tr>
			<th>follows</th>
			<th>
				<%= link_to following_user_path(user) do %>
					<%= user.followings.count %>
				<% end %>
			</th>
		</tr>
		<tr>
			<th>followers</th>
			<th>
				<%= link_to followers_user_path(user) do %>
					<%= user.followers.count %>
				<% end %>
			</th>
		</tr>
</table>
<div class="row">
	<% if user == current_user %>
		<%= link_to '',edit_user_path(user), class: "col-xs-12 btn btn-default glyphicon glyphicon-wrench edit_user_path(user)" %>
	<% end %>
</div>
<div class="row">
	<% unless user == current_user %>
    <% if current_user.following?(user) %>
       <p><%= link_to "フォローを外す", relationships_path(user.id), method: :delete, class:"btn btn-primary" %></p>
    <% else %>
       <p><%= link_to "フォローする", relationships_path(user.id), method: :post, class:"btn btn-primary" %></p>
    <% end %>
	<% end %>
</div>
