<div class="">
	<ol>
		<% book.comments.each do |comment| %>
			<li class="clearfix">
				<%= link_to user_path(comment.user) do %>
					<%= attachment_image_tag(comment.user, :profile_image, :fill, 40, 40, style: "float: left; margin-right: 20px;", fallback: "noimage.png") %>
				<% end %>
				<div style="float: left;">
					<span><%= comment.user.name %></span>
					<p>
						<%= comment.comment %>
						<% if comment.user_id == current_user.id %>
							<%= link_to "Ã—", book_comment_path(book, comment), method: :delete, remote: true, class: "btn btn-danger btn-xs", style: "margin-left: 20px;" %>
						<% end %>
					</p>
				</div>
			</li>
		<% end %>
	</ol>
</div>