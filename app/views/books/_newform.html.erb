<%= form_for(book) do |f| %>
<!--エラーメッセージ-->
	<% if book.errors.any? %>
		<div class="error_messages">
			<h3><%= book.errors.count %>error occurrence</h3>
			<ul>
				<% book.errors.full_messages.each do |message| %>
					<li><%= message %></li>
				<% end %>
			</ul>
		</div>
	<% end %>
	<!--エラーメッセージ-->
	<div class="field row">
		<%= f.label :title %>
		<%= f.text_field :title, class: "col-xs-12 book_title form-control" %>
	</div>
	<div class="field row">
		<%= f.label :body %> <!-- ここを変更 -->
		<%= f.text_area :body, rows: 5, class: "col-xs-12 book_body form-control" %>
	</div>
	<div class="actions row">
		<%= f.submit class: "btn btn-primary col-xs-12" %>
	</div>
<% end %>