<div class="row">
	<div class="col-xs-3">
		<h2>User info</h2>
		<%= render 'users/profile', user: @user %>
		<h2>New book</h2>
		<%= render 'books/newform', book: @book_new %>
	</div>
	<div class="col-xs-9">
		<h2>Book detail</h2>
		<table class="table">
			<tr>
				<td>
					<%= link_to (@user) do %>
					<%= attachment_image_tag(@user, :profile_image, :fill, 100, 100, fallback: "no-image-mini.jpg") %><br>
					<%= @user.name %>
					<% end %>
				</td>
				<td><%= link_to @book.title, book_path(@book) %></td>
				<td><%= @book.body %></td>
				<td>
					<% if @book.favorited_by?(current_user) %>
						<%= link_to book_favorites_path(@book), method: :delete do %>
							<i class="fa fa-heart" aria-hidden="true" style="color: black;"></i>
						<% end %>
						<%= @book.favorites.count %>
					<% else %>
						<%= link_to book_favorites_path(@book), method: :post do %>
							<i class="fa fa-heart-o" aria-hidden="true"></i>
						<% end %>
						<%= @book.favorites.count %>
					<% end %>
				</td>
				<td>コメント数：<%= @book.comments.count %></td>
				<% if @user == current_user %>
					<td>
						<%= link_to edit_book_path(@book), class: "btn btn-default edit_book_#{@book.id}" do %>
							<i class="fa fa-pencil"></i>
						<% end %>
					</td>
					<td>
						<%= link_to book_path(@book), method: :delete, data: {confirm: "本当に削除してもよろしいですか？"}, class: "btn btn-danger destroy_book_#{@book.id}" do %>
							<i class="fa fa-trash-o"></i>
						<% end %>
					</td>
				<% end %>
			</tr>
		</table>
		<div class="">
			<ol>
				<% @book.comments.each do |comment| %>
					<li class="clearfix">
						<%= link_to user_path(comment.user) do %>
							<%= attachment_image_tag comment.user, :profile_image, :fill, 40, 40, style: "float: left; margin-right: 20px;", fallback: "no_image.jpg" %>
						<% end %>
						<div style="float: left;">
							<span><%= comment.user.name %></span>
							<p>
								<%= comment.comment %>
								<% if comment.user_id == current_user.id %>
									<%= link_to "×", book_comment_path(@book, comment), method: :delete, class: "btn btn-danger btn-xs", style: "margin-left: 20px;" %>
								<% end %>
							</p>
						</div>
					</li>
				<% end %>
			</ol>
		</div>
		<div class="comment form-group form-inline">
			<%= form_for [@book, @comment] do |f| %>
				<%= f.text_area :comment, class: "form-control", rows: 5, style: "width: 75%;", placeholder: "コメント" %>
				<%= f.submit "送信" %>
			<% end %>
		</div>
	</div>
</div>